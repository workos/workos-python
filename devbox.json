{
  "packages": [
    "python@3.7",
    "python37Packages.pip@latest",
    "python37Packages.setuptools@latest",
    "python37Packages.wheel@latest"
  ],
  "shell": {
    "init_hook": [
      "[ -z \"$FISH_VERSION\" ] && . \"$VENV_DIR/bin/activate\" || . \"$VENV_DIR/bin/activate.fish\"",
      "pip install -e .[dev]"
    ],
    "scripts": {
      "test": "python -m pytest"
    }
  }
}